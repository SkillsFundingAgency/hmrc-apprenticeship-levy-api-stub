@page "/oauth/grantscope"
@model SFA_DAS_TaxService_Stub.Pages.GrantScopeModel
@{
    ViewData["Title"] = "HMRC Tax Platform";
}

<h1>GrantScope</h1>

@section InsideHeader {
    <div class="header-proposition">
        <div class="content">
            <nav id="proposition-menu" class="header__menu" role="navigation">
                <span class="header__menu__proposition-name">&nbsp</span>
            </nav>
        </div>
    </div>
}

@section LogoRight {
    <div class="last-login float--right">
        <p class="flush text--right h3-heading">@ViewData["UserName"]</p>
    </div>
}

@section Content {
    <div>
        <article class="content__body">
            <h1>Authority to interact with HMRC on your behalf</h1>
            <p>The <strong>DAS Alpha Client Mock</strong> software application is requesting to do the following:</p>
            @if (!string.IsNullOrEmpty(ViewData["ScopeDescription"].ToString()))
            {
            <ul>
                <li class="bullets">@ViewData["ScopeDescription"]</li>
            </ul>
            }
            <p>It will be able to do the above for 10 hours from when you grant authority.</p>
            <form method="post">
                <fieldset class="form-field-group">
                    <div class="form-field">
                        <input class="button" type="submit" value="Grant Authority" />
                        <a asp-controller="GrantScope" asp-action="cancel">Do not grant authority</a>
                    </div>
                </fieldset>
            </form>
            <a href="" rel="external" target="_blank">You can remove this authority at any time.</a>
        </article>
    </div>
}